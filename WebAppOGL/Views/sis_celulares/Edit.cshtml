@model WebAppOGL.Entities.Sistemas.sis_celulares

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-content">
        <div class="modal-header">
            <center>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Editar Equipo</h4>
            </center>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Informacion del Equipo </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.FechaAlta, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control has-feedback-left", @placeholder = "FechaAlta" } })
                                        <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Modelo" } })
                                        <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Numero_Producto, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Numero_Producto" } })
                                        <span class="fa fa-asterisk form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.IMEI, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "IMEI" } })
                                        <span class="fa fa-qrcode form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Informacion Fisica del Equipo </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="form-horizontal">
                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.OS, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "OS" } })
                                        <span class="fa fa-android form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Almacenamiento, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Almacenamiento" } })
                                        <span class="fa fa-hdd-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "RAM" } })
                                        <span class="fa fa-exclamation form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Procesador, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Procesador" } })
                                        <span class="fa fa-tasks form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Pantalla, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Pantalla" } })
                                        <span class="fa fa-mobile-phone form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Camara_Frontal, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Camara_Frontal" } })
                                        <span class="fa fa-camera form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.Camara_Trasera, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Camara_Trasera" } })
                                        <span class="fa fa-camera-retro form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>

                                <div class="form-label-left input_mask">
                                    <div class="col-md-6 col-sm-6  form-group has-feedback">
                                        @Html.EditorFor(model => model.MAC_Address, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "MAC_Address" } })
                                        <span class="fa fa-wifi form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Otra Informacion del Equipo </h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="form-label-left input_mask">
                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                    @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Color" } })
                                    <span class="fa fa-paint-brush form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-label-left input_mask">
                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                    @Html.EditorFor(model => model.Cargador, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Cargador" } })
                                    <span class="fa fa-plug form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-label-left input_mask">
                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                    @Html.DropDownList("sis_mantenimiento_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                                    <span class="fa fa-users form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-label-left input_mask">
                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                    @Html.DropDownList("sis_estatusequipo_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                                    <span class="fa fa-flag-checkered form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="form-label-left input_mask">
                                <div class="col-md-6 col-sm-6  form-group has-feedback">
                                    @Html.DropDownList("sis_marcas_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                                    <span class="fa fa-copyright form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>    
}