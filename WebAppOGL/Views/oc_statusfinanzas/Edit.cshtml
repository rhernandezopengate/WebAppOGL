@model WebAppOGL.Entities.OrdenesCompra.oc_statusfinanzas

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutOrdenesCompras.cshtml";
}

<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-0 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Estatus de Finanzas <small>Editar</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">

                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="Descripcion">
                            Descripcion
                        </label>
                        <div class="col-md-6 col-sm-6">
                            @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-actions no-color">
                    <a class="btn btn-default" href="@Url.Action("Index")">Regresar</a>|
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
