@model WebAppOGL.Entities.OrdenesCompra.oc_det_ordenes_productos

@{
    Layout = null;
}

<div class="modal-content">    
    <div class="modal-body">
        <div class="bs-example" data-example-id="simple-jumbotron">
            <center>
                <h3>¿Desea eliminar este registro?</h3>
            </center>

            <div class="jumbotron ">
                <p>
                    <h4>
                        <label>
                            Producto: @Html.DisplayFor(model => model.oc_productos.Descripcion)
                        </label>
                    </h4>
                    <h4>
                        <label>
                            Cantidad : @Html.DisplayFor(model => model.Cantidad)
                        </label>
                    </h4>
                    <h4>
                        <label>
                            Precio Unitario : @Html.DisplayFor(model => model.Precio)
                        </label>
                    </h4>                    
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
    </div>
</div>
