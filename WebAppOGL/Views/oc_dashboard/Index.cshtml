
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOrdenesCompras.cshtml";
}

@if (User.IsInRole("compras"))
{
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="x_content">
                    <div class="row">
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-check-circle-o"></i>
                                </div>
                                <div class="count">@ViewBag.OrdenesPendientes</div>
                                <h3>Ordenes Por Aprobar</h3>
                                <p>Ordenes en espera de aprobacion.</p>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
}


@if (User.IsInRole("sistemas"))
{
    <div class="row">
        <div class="col-md-12">
            <div class="">
                <div class="x_content">
                    <div class="row">
                        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6  ">
                            <div class="tile-stats">
                                <div class="icon">
                                    <i class="fa fa-check-circle-o"></i>
                                </div>
                                <div class="count">@ViewBag.OrdenesPendientes</div>
                                <h3>Ordenes Por Aprobar</h3>
                                <p>Ordenes en espera de aprobacion.</p>
                            </div>
                        </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
}


<script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/build/js/custom.min.js"></script>