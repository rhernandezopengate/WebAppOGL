<!DOCTYPE html>

<html>
<head>
    <link href="~/images/LOGO TRANSPARENTE.png" rel="shortcut icon" type="image/x-icon" />

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Open Gate Logistics</title>
    <link href="~/images/LOGO TRANSPARENTE.png" rel="shortcut icon" type="image/x-icon" />
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet" />
    <link href="~/vendors/iCheck/skins/flat/green.css" rel="stylesheet" />
    <link href="~/build/css/custom.min.css" rel="stylesheet" />

    <script src="~/vendors/jquery/dist/jquery.min.js"></script>

    <script src="~/vendors/fastclick/lib/fastclick.js"></script>
    <script src="~/vendors/nprogress/nprogress.js"></script>
    <script src="~/vendors/iCheck/icheck.min.js"></script>

    <!-- Toastr -->
    <script src="~/Scripts/toastr.js"></script>
    <link href="~/Content/toastr.css" rel="stylesheet" />
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <br />
                    <div class="navbar nav_title" style="border: 0; height:90px">
                        <a href='@Url.Action("Index", "Home")' class="site_title img-responsive" style="height:auto; width:200px"><img src="~/images/LOGO.jpg" class="img-responsive" /></a>
                    </div>

                    <div class="clearfix"></div>

                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li><a href='@Url.Action("Index", "oc_dashboard")'><i class="fa fa-dashboard"></i>Dashboard</a></li>
                                <li><a href='@Url.Action("Index", "oc_ordenesdecompras")'><i class="fa fa-list-alt"></i>Ordenes de Compra</a></li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Catalogos Administracion</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-cogs"></i> Configuracion <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="">
                                        <li><a href='@Url.Action("Index", "oc_productos")'>Productos</a></li>
                                        <li><a href='@Url.Action("Index", "oc_proveedores")'>Proveedores</a></li>
                                        <li><a href='@Url.Action("Index", "oc_solicitantes")'>Solicitantes</a></li>
                                        <li><a href='@Url.Action("Index", "oc_supervisores")'>Supervisores</a></li>
                                        <li><a href='@Url.Action("Index", "oc_categoria")'>Categorias OC</a></li>
                                        <li><a href='@Url.Action("Index", "oc_centrocostos")'>Centros de Costos</a></li>
                                        <li><a href='@Url.Action("Index", "oc_lugarentrega")'>Lugares de Entrega</a></li>
                                        <li><a href='@Url.Action("Index", "oc_subcentrocostos")'>Sub Centros de Costos</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="menu_section">
                            <h3>Catalogos</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-cogs"></i> Configuracion <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="">
                                        <li><a href='@Url.Action("Index", "oc_statuscompras")'>Status Compras</a></li>
                                        <li><a href='@Url.Action("Index", "oc_statusdirector")'>Status Director</a></li>
                                        <li><a href='@Url.Action("Index", "oc_statusfinanzas")'>Status Finanzas</a></li>
                                        <li><a href='@Url.Action("Index", "oc_statussupervisor")'>Status Supervisor</a></li>
                                        <li><a href='@Url.Action("Index", "oc_divisa")'>Divisas</a></li>
                                        <li><a href='@Url.Action("Index", "oc_formapago")'>Formas de Pago</a></li>
                                        <li><a href='@Url.Action("Index", "oc_tipocompra")'>Tipo de Compra</a></li>
                                        <li><a href='@Url.Action("Index", "UoMs")'>Unidades de Medida</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>                       
                    </div>
                    <!-- /sidebar menu -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">

                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    <p>&copy; @DateTime.Now.Year - <a href="http://www.opengatelogistics.com/" target="_blank">OPEN GATE LOGISTICS</a> </p>
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
