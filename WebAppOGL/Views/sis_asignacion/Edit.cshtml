@model WebAppOGL.Entities.Sistemas.sis_asignacion

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm())
{
    <div class="modal-content">
        <div class="modal-header">
            <center>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Editar Asignacion</h4>
            </center>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-label-left input_mask">
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.EditorFor(model => model.FechaAlta, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Fecha Alta" } })
                    <span class="fa fa-calendar form-control-feedback left" aria-hidden="true"></span>
                </div>
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.DropDownList("adm_empleados_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                    <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                </div>
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.DropDownList("sis_equipos_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                    <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                </div>
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.DropDownList("adm_cuentas_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                    <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                </div>
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.DropDownList("adm_area_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                    <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                </div>
                <div class="col-md-6 col-sm-6  form-group has-feedback">
                    @Html.DropDownList("adm_sucursales_Id", null, htmlAttributes: new { @class = "form-control has-feedback-left" })
                    <span class="fa fa-book form-control-feedback left" aria-hidden="true"></span>
                </div>
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
            </div>           
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>    
}