@model WebAppOGL.Entities.OrdenesCompra.oc_proveedores

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutSistemas.cshtml";
}


<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-0 ">
    <div class="x_panel">
        <div class="x_title">
            <h3>Eliminar Proveedores</h3>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="bs-example" data-example-id="simple-jumbotron">
                <center>
                    <h3>¿Desea eliminar estos registro?</h3>
                </center>
                
                    <div class="jumbotron ">
                        <p>
                            <h4>
                                <label>
                                    RFC: @Html.DisplayFor(model => model.RFC)
                                </label>
                            </h4>
                            <h4>
                                <label>
                                    Nombre Comercial: @Html.DisplayFor(model => model.NombreComercial)
                                </label>
                            </h4>
                            <h4>
                                <label>
                                    RAZÓN SOCIAL: @Html.DisplayFor(model => model.RazonSocial)
                                </label>
                            </h4>
                            <h4>
                                <label>
                                    Dias de Credito: @Html.DisplayFor(model => model.DiasCredito)
                                </label>
                            </h4>
                        </p>
                                                                 
                    </div>
                
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <a class="btn btn-default" href="@Url.Action("Index")">Regresar</a>|
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            }
        </div>
    </div>
</div>
