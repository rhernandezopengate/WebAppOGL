@model WebAppOGL.Entities.OrdenesCompra.oc_proveedores

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutSistemas.cshtml";
}

<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-0 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Proveedores<small>Crear</small></h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div id="demo-form2" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
                    <div class="item form-group">
                        <div class="form-group">
                            <label class="control-label col-md-2">Nombre Comercial</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NombreComercial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NombreComercial, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Razón Social</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RazonSocial, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RazonSocial, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">RFC</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.RFC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RFC, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Días de Credito</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiasCredito, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiasCredito, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-actions no-color">
                    <a class="btn btn-default" href="@Url.Action("Index")">Regresar</a>|
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}