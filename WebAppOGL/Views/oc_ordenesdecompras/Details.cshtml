@model WebAppOGL.Entities.OrdenesCompra.oc_ordenescompras

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <center>
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">×</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Orden de Compra @Model.Folio</h4>
        </center>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> Informacion General</h2> &nbsp;&nbsp;&nbsp;
                        <div class="clearfix"></div>
                    </div>                  
                    <div class="x_content">
                        <div class="row">
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_solicitantes.NombreCompleto" disabled>
                                    <span class="fa fa-bookmark form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.Cuenta" disabled>
                                    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_centrocostos.Descripcion" disabled>
                                    <span class="fa fa-cube form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value=" @Model.oc_subcentrocostos.Descripcion" disabled>
                                    <span class="fa fa-cubes form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_categoria.Descripcion" disabled>
                                    <span class="fa fa-tags form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_proveedores.NombreComercial" disabled>
                                    <span class="fa fa-group form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_formapago.Descripcion" disabled>
                                    <span class="fa fa-credit-card form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_divisa.Descripcion" disabled>
                                    <span class="fa fa-usd form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-label-left input_mask">
                                <div class="col-md-4 col-sm-4 form-group has-feedback">
                                    <input type="text" class="form-control has-feedback-left" value="@Model.oc_lugarentrega.Descripcion" disabled>
                                    <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                                </div>
                            </div>
                        </div>
                        <table class="table table-bordered text-center">
                            <thead>
                                <tr>
                                    <th style="width: 30px; text-align:center;">Codigo</th>
                                    <th style="text-align:center;"">Description</th>
                                    <th style="width:100px;">Cantidad</th>
                                    <th style="width:100px;text-align:center;">P.Unitario</th>
                                    <th style="width:100px;text-align:center;">Sub Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewData["ListaOC"] as IEnumerable<WebAppOGL.Entities.OrdenesCompra.detalleproductos>)
                                {
                                    <tr>
                                        <td>@item.codigo</td>
                                        <td>@item.producto</td>
                                        <td>@item.cantidad</td>
                                        <td>@item.precio</td>
                                        <td>@item.subtotal</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td style="text-align:right" colspan="4"><span> <strong> Subtotal </strong> </span> </td>
                                    <td> <span id="Subtotal"> @ViewBag.Subtotal </span>  </td>

                                </tr>
                                <tr style="text-align:right">
                                    <td colspan="4"> <span> <strong> IVA </strong> </span> </td>
                                    <td style="text-align:center"> <span id="IVA"> @ViewBag.IVA </span> </td>

                                </tr>
                                <tr style="text-align:right">
                                    <td colspan="4"> <span><strong> Total </strong> </span> </td>
                                    <td style="text-align:center"> <span id="Total"> @ViewBag.Total </span> </td>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.Proyecto, new { @class = "form-control", disabled = "disabled" })
                            </div>
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.Justificacion, new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button class="btn btn-info">@Html.ActionLink("Descargar Orden Para Firma", "ImprimirVista", new { id = Model.Id })</button>
    </div>
</div>

